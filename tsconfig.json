{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@base/*": ["src/*"],
			"@api/*": ["src/api/*"]
		},
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
	
	},
	"exclude": ["node_modules"],
	"include": ["src"],
	"compileOnSave": true
}
